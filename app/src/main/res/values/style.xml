<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ColValueText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ff8f00</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">#FFF</item>
        <item name="android:textSize">13sp</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font:actor</item>
    </style>
    <style name="HeaderText" parent="TextAppearance.AppCompat">

        <item name="android:textColor">#434343</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font:actor</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:layout_marginStart">0dp</item>
    </style>
    <style name="ListText" parent="TextAppearance.AppCompat">
        <item name="android:textAlignment">viewStart</item>
        <item name="fontFamily">@font:actor</item>
        <item name="android:textColor">#434343</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">7sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">5dp</item>

    </style>


</resources>